# Staging Environment Variables
# Copy this file to .env.staging and fill in actual values

# Node Environment
NODE_ENV=staging

# Backend Configuration
PORT=4000
CORS_ORIGIN=https://staging.givemejobs.com

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres-host:5432/givemejobs_staging
MONGODB_URI=mongodb://user:password@mongodb-host:27017/givemejobs_staging
REDIS_URL=redis://redis-host:6379/1

# JWT Configuration
JWT_SECRET=your-staging-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-staging-refresh-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
LINKEDIN_CLIENT_ID=your-staging-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-staging-linkedin-client-secret
LINKEDIN_CALLBACK_URL=https://staging-api.givemejobs.com/api/auth/oauth/linkedin/callback

GOOGLE_CLIENT_ID=your-staging-google-client-id
GOOGLE_CLIENT_SECRET=your-staging-google-client-secret
GOOGLE_CALLBACK_URL=https://staging-api.givemejobs.com/api/auth/oauth/google/callback

# AI/ML Configuration
OPENAI_API_KEY=your-staging-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo
PINECONE_API_KEY=your-staging-pinecone-api-key
PINECONE_ENVIRONMENT=your-staging-pinecone-environment
PINECONE_INDEX_NAME=job-embeddings-staging

# Job Board APIs
LINKEDIN_API_KEY=your-staging-linkedin-api-key
INDEED_API_KEY=your-staging-indeed-api-key
GLASSDOOR_API_KEY=your-staging-glassdoor-api-key

# Email Configuration
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_USER=your-mailtrap-user
EMAIL_PASSWORD=your-mailtrap-password
EMAIL_FROM=staging@givemejobs.com

# Monitoring & Logging
SENTRY_DSN=your-staging-sentry-dsn
LOG_LEVEL=debug
ELASTIC_APM_SERVER_URL=http://apm-server:8200
ELASTIC_APM_SECRET_TOKEN=your-staging-apm-token

# Blockchain Configuration
BLOCKCHAIN_NETWORK=testnet
BLOCKCHAIN_RPC_URL=your-testnet-rpc-url
BLOCKCHAIN_PRIVATE_KEY=your-testnet-private-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://staging-api.givemejobs.com
NEXT_PUBLIC_SENTRY_DSN=your-staging-frontend-sentry-dsn
