{
  "name": "@givemejobs/backend",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "migrate:up": "node-pg-migrate up -m src/migrations",
    "migrate:down": "node-pg-migrate down -m src/migrations",
    "migrate:create": "node-pg-migrate create -m src/migrations",
    "migrate:test": "node-pg-migrate up -m src/migrations --database-url-var TEST_DATABASE_URL",
    "mongo:init": "tsx src/scripts/init-mongodb.ts",
    "redis:test": "tsx src/scripts/test-redis.ts",
    "db:setup": "npm run migrate:up && npm run mongo:init",
    "db:test": "tsx src/scripts/test-redis.ts",
    "vector:init": "tsx src/scripts/init-vector-db.ts",
    "jobs:embed": "tsx src/scripts/embed-jobs.ts",
    "test:email": "tsx src/scripts/test-email.ts",
    "test:oauth": "tsx src/scripts/test-oauth.ts",
    "test:openai": "tsx src/scripts/test-openai.ts",
    "test:pinecone": "tsx src/scripts/test-pinecone.ts",
    "test:services": "npm run test:oauth && npm run test:email && npm run redis:test",
    "setup:services": "tsx src/scripts/setup-services.ts",
    "check:all": "tsx src/scripts/check-all-services.ts",
    "monitoring:setup": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-monitoring.ps1",
    "monitoring:start": "docker-compose up -d prometheus grafana elasticsearch logstash kibana",
    "monitoring:stop": "docker-compose stop prometheus grafana elasticsearch logstash kibana",
    "monitoring:logs": "docker-compose logs -f prometheus grafana elasticsearch logstash kibana"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.1.1",
    "@givemejobs/shared-types": "*",
    "@pinecone-database/pinecone": "^6.1.2",
    "@sentry/node": "^10.20.0",
    "@sentry/profiling-node": "^10.20.0",
    "@types/pdfkit": "^0.17.3",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "isomorphic-dompurify": "^2.29.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^6.2.2",
    "nodemailer": "^7.0.9",
    "openai": "^6.4.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.0",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
    "redis": "^4.6.0",
    "resend": "^6.3.0",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "winston-elasticsearch": "^0.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.0",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-linkedin-oauth2": "^1.5.6",
    "@types/pg": "^8.10.0",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "supertest": "^6.3.3",
    "tsx": "^4.0.0",
    "typescript": "^5.2.0",
    "vitest": "^1.0.0"
  }
}
