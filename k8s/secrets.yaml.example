# Example secrets file - DO NOT commit actual secrets to version control
# Create actual secrets using: kubectl create secret generic <name> --from-literal=key=value

apiVersion: v1
kind: Secret
metadata:
  name: backend-secrets
  namespace: givemejobs-production
type: Opaque
stringData:
  DATABASE_URL: "postgresql://user:password@postgres-service:5432/givemejobs"
  MONGODB_URI: "mongodb://user:password@mongodb-service:27017/givemejobs"
  REDIS_URL: "redis://redis-service:6379"
  JWT_SECRET: "your-jwt-secret-here"
  JWT_REFRESH_SECRET: "your-jwt-refresh-secret-here"
  OPENAI_API_KEY: "your-openai-api-key"
  PINECONE_API_KEY: "your-pinecone-api-key"
  PINECONE_ENVIRONMENT: "your-pinecone-environment"
  LINKEDIN_CLIENT_ID: "your-linkedin-client-id"
  LINKEDIN_CLIENT_SECRET: "your-linkedin-client-secret"
  GOOGLE_CLIENT_ID: "your-google-client-id"
  GOOGLE_CLIENT_SECRET: "your-google-client-secret"
  EMAIL_HOST: "smtp.example.com"
  EMAIL_PORT: "587"
  EMAIL_USER: "your-email-user"
  EMAIL_PASSWORD: "your-email-password"
  SENTRY_DSN: "your-sentry-dsn"
---
