# Production Environment Variables
# Copy this file to .env.production and fill in actual values

# Node Environment
NODE_ENV=production

# Backend Configuration
PORT=4000
CORS_ORIGIN=https://givemejobs.com

# Database Configuration
DATABASE_URL=postgresql://user:password@postgres-host:5432/givemejobs
MONGODB_URI=mongodb://user:password@mongodb-host:27017/givemejobs
REDIS_URL=redis://redis-host:6379

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-production-refresh-secret-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=https://api.givemejobs.com/api/auth/oauth/linkedin/callback

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.givemejobs.com/api/auth/oauth/google/callback

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=job-embeddings

# Job Board APIs
LINKEDIN_API_KEY=your-linkedin-api-key
INDEED_API_KEY=your-indeed-api-key
GLASSDOOR_API_KEY=your-glassdoor-api-key

# Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=apikey
EMAIL_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@givemejobs.com

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info
ELASTIC_APM_SERVER_URL=http://apm-server:8200
ELASTIC_APM_SECRET_TOKEN=your-apm-token

# Blockchain Configuration
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_RPC_URL=your-blockchain-rpc-url
BLOCKCHAIN_PRIVATE_KEY=your-blockchain-private-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.givemejobs.com
NEXT_PUBLIC_SENTRY_DSN=your-frontend-sentry-dsn
